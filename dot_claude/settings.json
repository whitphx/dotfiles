{
  "hooks": {
    "Notification": [
      {
        "matcher": "permission_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "~/.local/bin/cc-idle-notification.sh"
          }
        ]
      },
      {
        "matcher": "idle_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "~/.local/bin/cc-idle-notification.sh"
          }
        ]
      }
    ]
  },
  "alwaysThinkingEnabled": true
}
